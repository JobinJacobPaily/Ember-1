<article class="rental"> <Rental::Image    src={{@rent.image}}    alt="A picture of {{@rent.title}}"  />   <div class="details">    <h3>{{@rent.title}}</h3>    <div class="detail owner">      <span>Owner:</span>{{@rent.owner}}    </div>    <div class="detail type">      <span>Type:</span> {{@rent.type}}    </div>    <div class="detail location">      <span>Location:</span> {{@rent.city}}    </div>    <div class="detail bedrooms">      <span>Number of bedrooms:</span> {{@rent.bedrooms}}    </div>   </div>  <Map    @lat={{@rent.location.lat}}    @lng={{@rent.location.lng}}    @zoom="7"    @width="150"    @height="150"    alt="A map of @{{rent.title}}"  /></article>